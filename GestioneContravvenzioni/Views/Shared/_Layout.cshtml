<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm fixed-top navbar-dark bg-dark mb-5">
               
        <div class="container">

            <div class="row">

                <div class="col-12">

                    <a href="@Url.Action("Index", "Home", new { area = "" })" class="navbar-brand">

                        <img class="logo" src="~/Content/img/2.png" />
                    </a>

                    <a href="@Url.Action("Index", "Home", new { area = "" })" class="navbar-brand fs-1 align-middle">Polizia Municipale</a>

                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Attiva/Disattiva spostamento" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Anagrafiche", "Index", "Anagrafiche", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Violazioni", "Index", "Violazioni", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Verbali", "Index", "Verbali", new { area = "" }, new { @class = "nav-link" })</li>
                        </ul>
                    </div>

                </div>

            </div>


        </div>
    </nav>
    <div class="container body-content pt-5 mb-5">
        @RenderBody()

    </div>
    

    <div>
        <div class="container pt-5">
            <hr />
            <footer class="text-customcolor fw-semibold opacity-75">
                <p>&copy; @DateTime.Now.Year - Polizia Municipale</p>
            </footer>
        </div>
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
